---
import Base from "@/layouts/Base.astro";
---

<Base title="Kontakt oss">
  <section class="section">
    <div class="container max-w-4xl">
      
      <h1 class="mb-8 text-4xl font-bold">Kontakt oss</h1>
      
      <div class="grid gap-12 lg:grid-cols-2">
        
        <!-- Kontaktinformasjon -->
        <div>
          <h2 class="text-2xl font-bold mb-6">Ta kontakt</h2>
          
          <p class="text-gray-600 mb-8">
            Vi hører gjerne fra deg! Enten du har spørsmål, tilbakemeldinger 
            eller ønsker å samarbeide med oss.
          </p>
          
          <div class="space-y-6">
            
            <!-- E-post -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">E-post</h3>
                <a href="mailto:kontakt@samfunnforalle.cloud" class="text-primary hover:underline">
                  kontakt@samfunnforalle.cloud
                </a>
              </div>
            </div>
            
            <!-- Telefon -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">Telefon</h3>
                <a href="tel:+4712345678" class="text-primary hover:underline">
                  +47 123 45 678
                </a>
              </div>
            </div>
            
            <!-- Adresse -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">Besøksadresse</h3>
                <p class="text-gray-600">
                  Eksempelgata 123<br>
                  0123 Oslo
                </p>
              </div>
            </div>
            
          </div>
        </div>
        
        <!-- Kontaktskjema -->
        <div>
          <h2 class="text-2xl font-bold mb-6">Send oss en melding</h2>
          
          <form class="space-y-6" action="#" method="POST">
            
            <div>
              <label for="name" class="block text-sm font-medium mb-2">Navn</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Ditt navn"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium mb-2">E-post</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="din@epost.no"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium mb-2">Emne</label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Hva gjelder henvendelsen?"
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium mb-2">Melding</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Skriv din melding her..."
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="w-full px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-opacity-90 transition"
            >
              Send melding
            </button>
            
          </form>
          
          <p class="mt-4 text-sm text-gray-500">
            Vi svarer vanligvis innen 1-2 virkedager.
          </p>
        </div>
        
      </div>
      
    </div>
  </section>
</Base>