---
import Base from "@/layouts/Base.astro";
import { getArticles, getArticleBySlug, getRelatedArticles, getMostRecentArticles, urlFor } from "@/lib/sanity";

export async function getStaticPaths() {
  const articles = await getArticles();
  return articles.map((article: any) => ({
    params: { slug: article.slug.current },
  }));
}

const { slug } = Astro.params;
const article = await getArticleBySlug(slug as string);

if (!article) {
  return Astro.redirect("/404");
}

// Hent relaterte artikler
const categoryIds = article.categories?.map((c: any) => c._id) || [];
const tagIds = article.tags?.map((t: any) => t._id) || [];
const relatedArticles = await getRelatedArticles(slug as string, categoryIds, tagIds, 3);

// Hent mest leste artikler
const mostRecentArticles = await getMostRecentArticles(5);

// Beregn lesetid
function calculateReadingTime(body: any[]): number {
  if (!body) return 1;
  let wordCount = 0;
  body.forEach(block => {
    if (block._type === "block" && block.children) {
      block.children.forEach((child: any) => {
        if (child.text) {
          wordCount += child.text.split(/\s+/).filter((word: string) => word.length > 0).length;
        }
      });
    }
  });
  const minutes = Math.ceil(wordCount / 200);
  return minutes < 1 ? 1 : minutes;
}

const readingTime = calculateReadingTime(article.body);
const articleUrl = `https://samfunnforalle.cloud/artikler/${slug}`;
const articleTitle = encodeURIComponent(article.displayTitle || article.title);
---

<Base title={article.displayTitle || article.title}>
  <!-- Leseprogress-bar -->
  <div id="reading-progress" class="fixed top-0 left-0 h-1 bg-primary z-50 transition-all duration-100" style="width: 0%"></div>
  
  <article class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <!-- Hovedinnhold -->
        <div class="lg:col-span-8">
          
          <!-- Brødsmulesti -->
          <nav class="mb-6 text-sm" aria-label="Brødsmulesti">
            <ol class="flex flex-wrap items-center gap-2 text-text-light dark:text-darkmode-text-light">
              <li><a href="/" class="hover:text-primary">Hjem</a></li>
              <li><span>/</span></li>
              <li><a href="/artikler" class="hover:text-primary">Artikler</a></li>
              {article.categories && article.categories.length > 0 && (
                <>
                  <li><span>/</span></li>
                  <li>
                    <a href={`/kategori/${article.categories[0].slug.current}`} class="hover:text-primary">
                      {article.categories[0].title}
                    </a>
                  </li>
                </>
              )}
              <li><span>/</span></li>
              <li class="text-text-dark dark:text-darkmode-text-dark truncate max-w-[200px]">
                {article.displayTitle || article.title}
              </li>
            </ol>
          </nav>
          
          <!-- Kategorier -->
          {article.categories && article.categories.length > 0 && (
            <div class="mb-4 flex gap-2">
              {article.categories.map((cat: any) => (
                <a 
                  href={`/kategori/${cat.slug.current}`}
                  class="text-sm font-medium text-primary uppercase hover:underline"
                >
                  {cat.title}
                </a>
              ))}
            </div>
          )}
          
          <!-- Tittel -->
          <h1 class="mb-4 text-3xl font-bold lg:text-4xl text-text-dark dark:text-darkmode-text-dark" id="article-title">
            {article.displayTitle || article.title}
          </h1>
          
          <!-- Ingress -->
          {article.standfirst && (
            <p class="mb-6 text-xl text-text-light dark:text-darkmode-text-light leading-relaxed">
              {article.standfirst}
            </p>
          )}
          
          <!-- Tekststørrelse-kontroll -->
          <div class="mb-6 flex items-center gap-4 p-3 bg-light dark:bg-darkmode-light rounded-lg">
            <span class="text-sm text-text-light dark:text-darkmode-text-light">Tekststørrelse:</span>
            <div class="flex items-center gap-2">
              <button 
                id="font-decrease" 
                class="w-8 h-8 flex items-center justify-center rounded-full bg-white dark:bg-darkmode-body border border-border dark:border-darkmode-border hover:border-primary transition-colors"
                aria-label="Mindre tekst"
              >
                <span class="text-sm font-bold">A-</span>
              </button>
              <button 
                id="font-reset" 
                class="px-3 h-8 flex items-center justify-center rounded-full bg-white dark:bg-darkmode-body border border-border dark:border-darkmode-border hover:border-primary transition-colors text-sm"
                aria-label="Normal tekst"
              >
                Normal
              </button>
              <button 
                id="font-increase" 
                class="w-8 h-8 flex items-center justify-center rounded-full bg-white dark:bg-darkmode-body border border-border dark:border-darkmode-border hover:border-primary transition-colors"
                aria-label="Større tekst"
              >
                <span class="text-lg font-bold">A+</span>
              </button>
            </div>
            
            <!-- Bokmerke-knapp -->
            <button 
              id="bookmark-btn"
              class="ml-auto flex items-center gap-2 px-3 py-1 rounded-full bg-white dark:bg-darkmode-body border border-border dark:border-darkmode-border hover:border-primary transition-colors"
              data-slug={slug}
              data-title={article.displayTitle || article.title}
              aria-label="Lagre artikkel"
            >
              <svg id="bookmark-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
              </svg>
              <span id="bookmark-text" class="text-sm hidden sm:inline">Lagre</span>
            </button>
          </div>
          
          <!-- Forfatter og dato -->
          <div class="mb-8 flex flex-wrap items-center gap-4 border-b border-border dark:border-darkmode-border pb-6">
            {article.authors && article.authors.map((author: any) => (
              <div class="flex items-center gap-3">
                <a href={`/forfatter/${author.slug.current}`} class="flex items-center gap-3 group">
                  {author.image && (
                    <img 
                      src={urlFor(author.image).width(48).height(48).url()}
                      alt={author.name}
                      class="h-12 w-12 rounded-full object-cover group-hover:ring-2 ring-primary transition-all"
                    />
                  )}
                  <div>
                    <p class="font-medium text-text-dark dark:text-darkmode-text-dark group-hover:text-primary transition-colors">{author.name}</p>
                    <div class="flex items-center gap-2 text-sm text-text-light dark:text-darkmode-text-light">
                      {article.publishedAt && (
                        <span>
                          {new Date(article.publishedAt).toLocaleDateString("nb-NO", {
                            year: "numeric",
                            month: "long",
                            day: "numeric"
                          })}
                        </span>
                      )}
                      <span>•</span>
                      <span class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        {readingTime} min lesetid
                      </span>
                    </div>
                  </div>
                </a>
              </div>
            ))}
            
            <!-- Delingsknapper -->
            <div class="ml-auto flex items-center gap-2">
              <span class="text-sm text-text-light dark:text-darkmode-text-light mr-2 hidden sm:inline">Del:</span>
              <a href={`https://www.facebook.com/sharer/sharer.php?u=${articleUrl}`} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-10 h-10 rounded-full bg-light dark:bg-darkmode-light hover:bg-[#1877f2] hover:text-white transition-colors" aria-label="Del på Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
              <a href={`https://twitter.com/intent/tweet?url=${articleUrl}&text=${articleTitle}`} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-10 h-10 rounded-full bg-light dark:bg-darkmode-light hover:bg-black hover:text-white transition-colors" aria-label="Del på X">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </a>
              <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${articleUrl}`} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-10 h-10 rounded-full bg-light dark:bg-darkmode-light hover:bg-[#0a66c2] hover:text-white transition-colors" aria-label="Del på LinkedIn">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </a>
              <button id="copy-link-btn" class="flex items-center justify-center w-10 h-10 rounded-full bg-light dark:bg-darkmode-light hover:bg-primary hover:text-white transition-colors" aria-label="Kopier lenke" data-url={articleUrl}>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
              </button>
            </div>
          </div>
          
          <!-- Hovedbilde -->
          {article.mainImage && (
            <figure class="mb-8">
              <img 
                src={urlFor(article.mainImage).width(1200).url()}
                alt={article.mainImage.alt || article.displayTitle}
                class="w-full rounded-lg"
              />
              {(article.mainImage.caption || article.mainImage.credit) && (
                <figcaption class="mt-2 text-sm text-text-light dark:text-darkmode-text-light">
                  {article.mainImage.caption}
                  {article.mainImage.credit && (
                    <span class="ml-1">Foto: {article.mainImage.credit}</span>
                  )}
                </figcaption>
              )}
            </figure>
          )}
          
          <!-- Brødtekst -->
          <div class="prose prose-lg max-w-none dark:prose-invert" id="article-body">
          </div>
          
          <!-- Tagger -->
          {article.tags && article.tags.length > 0 && (
            <div class="mt-8 border-t border-border dark:border-darkmode-border pt-6">
              <p class="mb-2 text-sm font-medium text-text-light dark:text-darkmode-text-light">Emner:</p>
              <div class="flex flex-wrap gap-2">
                {article.tags.map((tag: any) => (
                  <a 
                    href={`/emne/${tag.slug.current}`}
                    class="rounded-full bg-light dark:bg-darkmode-light border border-border dark:border-darkmode-border px-3 py-1 text-sm text-text-dark dark:text-darkmode-text hover:bg-primary hover:text-white hover:border-primary transition-colors"
                  >
                    {tag.title}
                  </a>
                ))}
              </div>
            </div>
          )}
          
          <!-- Relaterte artikler -->
          {relatedArticles && relatedArticles.length > 0 && (
            <div class="mt-12 border-t border-border dark:border-darkmode-border pt-8">
              <h2 class="text-2xl font-bold text-text-dark dark:text-darkmode-text-dark mb-6">Relaterte artikler</h2>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                {relatedArticles.map((related: any) => (
                  <article class="group">
                    <a href={`/artikler/${related.slug.current}`}>
                      {related.mainImage && (
                        <img 
                          src={urlFor(related.mainImage).width(400).height(250).url()}
                          alt={related.displayTitle || related.title}
                          class="w-full h-40 object-cover rounded-lg mb-3 group-hover:opacity-90 transition-opacity"
                        />
                      )}
                      <h3 class="font-bold text-text-dark dark:text-darkmode-text-dark group-hover:text-primary transition-colors line-clamp-2">
                        {related.displayTitle || related.title}
                      </h3>
                    </a>
                  </article>
                ))}
              </div>
            </div>
          )}
          
        </div>
        
        <!-- Sidebar -->
        <aside class="lg:col-span-4">
          <div class="sticky top-24 space-y-8">
            
            <!-- Mest lest -->
            <div class="p-6 bg-light dark:bg-darkmode-light rounded-xl">
              <h3 class="text-lg font-bold text-text-dark dark:text-darkmode-text-dark mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                Siste nytt
              </h3>
              <div class="space-y-4">
                {mostRecentArticles.map((recent: any, index: number) => (
                  <a href={`/artikler/${recent.slug.current}`} class="flex items-start gap-3 group">
                    <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full bg-primary text-white text-sm font-bold">
                      {index + 1}
                    </span>
                    <span class="text-sm text-text-dark dark:text-darkmode-text-dark group-hover:text-primary transition-colors line-clamp-2">
                      {recent.displayTitle || recent.title}
                    </span>
                  </a>
                ))}
              </div>
            </div>
            
            <!-- Lagrede artikler -->
            <div class="p-6 bg-light dark:bg-darkmode-light rounded-xl">
              <h3 class="text-lg font-bold text-text-dark dark:text-darkmode-text-dark mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                </svg>
                Lagrede artikler
              </h3>
              <div id="saved-articles-list" class="space-y-3">
                <p class="text-sm text-text-light dark:text-darkmode-text-light">Ingen lagrede artikler ennå.</p>
              </div>
            </div>
            
          </div>
        </aside>
        
      </div>
    </div>
  </article>
</Base>

<script define:vars={{ body: article.body }}>
  // Render Portable Text
  function renderPortableText(blocks) {
    if (!blocks) return "";
    return blocks.map(block => {
      if (block._type === "block") {
        const text = block.children?.map(child => child.text).join("") || "";
        switch (block.style) {
          case "h2": return `<h2 class="text-2xl font-bold mt-8 mb-4 text-text-dark dark:text-darkmode-text-dark">${text}</h2>`;
          case "h3": return `<h3 class="text-xl font-semibold mt-6 mb-3 text-text-dark dark:text-darkmode-text-dark">${text}</h3>`;
          case "blockquote": return `<blockquote class="border-l-4 border-primary pl-4 italic my-4 text-text dark:text-darkmode-text">${text}</blockquote>`;
          default: return `<p class="mb-4 text-text dark:text-darkmode-text">${text}</p>`;
        }
      }
      return "";
    }).join("");
  }
  
  document.getElementById("article-body").innerHTML = renderPortableText(body);
</script>

<script>
  // Leseprogress
  function updateReadingProgress() {
    const article = document.getElementById("article-body");
    if (!article) return;
    
    const articleTop = article.offsetTop;
    const articleHeight = article.offsetHeight;
    const windowHeight = window.innerHeight;
    const scrolled = window.scrollY;
    
    const progress = Math.min(100, Math.max(0, ((scrolled - articleTop + windowHeight) / articleHeight) * 100));
    document.getElementById("reading-progress").style.width = progress + "%";
  }
  
  window.addEventListener("scroll", updateReadingProgress);
  
  // Tekststørrelse
  let fontSize = 100;
  const articleBody = document.getElementById("article-body");
  
  document.getElementById("font-decrease")?.addEventListener("click", () => {
    fontSize = Math.max(80, fontSize - 10);
    articleBody.style.fontSize = fontSize + "%";
  });
  
  document.getElementById("font-increase")?.addEventListener("click", () => {
    fontSize = Math.min(150, fontSize + 10);
    articleBody.style.fontSize = fontSize + "%";
  });
  
  document.getElementById("font-reset")?.addEventListener("click", () => {
    fontSize = 100;
    articleBody.style.fontSize = "100%";
  });
  
  // Bokmerke/lagre artikkel
  function getBookmarks() {
    const saved = localStorage.getItem("savedArticles");
    return saved ? JSON.parse(saved) : [];
  }
  
  function saveBookmark(slug, title) {
    const bookmarks = getBookmarks();
    if (!bookmarks.find(b => b.slug === slug)) {
      bookmarks.push({ slug, title, savedAt: new Date().toISOString() });
      localStorage.setItem("savedArticles", JSON.stringify(bookmarks));
    }
    updateBookmarkUI();
    updateSavedArticlesList();
  }
  
  function removeBookmark(slug) {
    const bookmarks = getBookmarks().filter(b => b.slug !== slug);
    localStorage.setItem("savedArticles", JSON.stringify(bookmarks));
    updateBookmarkUI();
    updateSavedArticlesList();
  }
  
  function isBookmarked(slug) {
    return getBookmarks().find(b => b.slug === slug);
  }
  
  function updateBookmarkUI() {
    const btn = document.getElementById("bookmark-btn");
    const icon = document.getElementById("bookmark-icon");
    const text = document.getElementById("bookmark-text");
    const slug = btn?.getAttribute("data-slug");
    
    if (isBookmarked(slug)) {
      icon.setAttribute("fill", "currentColor");
      icon.classList.add("text-primary");
      text.textContent = "Lagret";
    } else {
      icon.setAttribute("fill", "none");
      icon.classList.remove("text-primary");
      text.textContent = "Lagre";
    }
  }
  
  function updateSavedArticlesList() {
    const container = document.getElementById("saved-articles-list");
    const bookmarks = getBookmarks();
    
    if (bookmarks.length === 0) {
      container.innerHTML = '<p class="text-sm text-text-light dark:text-darkmode-text-light">Ingen lagrede artikler ennå.</p>';
      return;
    }
    
    container.innerHTML = bookmarks.slice(0, 5).map(b => `
      <a href="/artikler/${b.slug}" class="block text-sm text-text-dark dark:text-darkmode-text-dark hover:text-primary transition-colors line-clamp-2">
        ${b.title}
      </a>
    `).join("");
  }
  
  document.getElementById("bookmark-btn")?.addEventListener("click", () => {
    const btn = document.getElementById("bookmark-btn");
    const slug = btn.getAttribute("data-slug");
    const title = btn.getAttribute("data-title");
    
    if (isBookmarked(slug)) {
      removeBookmark(slug);
    } else {
      saveBookmark(slug, title);
    }
  });
  
  // Kopier lenke
  document.getElementById("copy-link-btn")?.addEventListener("click", async () => {
    const btn = document.getElementById("copy-link-btn");
    const url = btn.getAttribute("data-url");
    try {
      await navigator.clipboard.writeText(url);
      btn.innerHTML = '<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
      setTimeout(() => {
        btn.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>';
      }, 2000);
    } catch (err) {
      console.error("Kunne ikke kopiere:", err);
    }
  });
  
  // Init
  updateBookmarkUI();
  updateSavedArticlesList();
</script>